scholarship = input("Do you want to be a scholar? (yes/no): ")

# Suggest work_out based wiegth
if weight > 60:  # you need to lose wieght
    recommended_work_out = [
        "Running or jogging",
        "push or pull up",
        "plank"
        "or use dumbell for Strength "
    ]
else:
    recommended_work_out = [
        "jumping jack"
        "sqout",
        "Plank",
        "use resistance band for ligth training"

    ]

print("\n---scholar ship---\n")
